#: import gch kivy.utils.get_color_from_hex
#: import BookstagramMypageScreen libs.baseclass.mypage_screen.BookstagramMypageScreen
#: import ContentCustomSheet libs.baseclass.mypage_screen.ContentCustomSheet


<BookstagramMypageScreen>:
    md_bg_color: gch("#ffffff")

    MDBoxLayout:
        orientation: "vertical"

        MDToolbar:
            md_bg_color: gch("#ffffff")
            title: "sangjin.lee"
            right_action_items: [['plus-box-outline', lambda x: x], ['menu', lambda x: root.show_bottom_sheet()]]

        MDBoxLayout:
            FloatLayout:
                canvas:
                    Color:
                        rgb: 1, 1, 1
                    Ellipse:
                        pos: 0, 400
                        size: 100, 100
                        source: "assets/images/profile.jpg"
                        angle_start: 0
                        angle_end: 360
            
            MDBoxLayout:
                MDFlatButton:
                    text: "Post"

                MDFlatButton:
                    text: "Follower"

                MDFlatButton:
                    text: "Following"

        MDLabel:
            size_hint: 1, None
            text: "SangJin Lee"

        MDFlatButton:
            size_hint: 1, None
            text: "Edit Profile"

        MDLabel:



<ContentCustomSheet>:
    orientation: "vertical"
    size_hint_y: None

    ScrollView:

        MDGridLayout:
            cols: 1
            adaptive_height: True

            OneLineIconListItem:
                text: "Preview"

                IconLeftWidget:
                    icon: "page-previous"

            OneLineIconListItem:
                text: "Exit"

                IconLeftWidget:
                    icon: "exit-to-app"